@model ChefDotNet.Models.ConseilModel
           
@{
    ViewBag.Title = "Création d'un conseil";
}

@using (Html.BeginForm())
{    
    <div>
        <div class="editor-label">
            @Html.LabelFor(m => m.Nom)
            <span class="etoile">*</span>
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Nom)
            @Html.ValidationMessageFor(m => m.Nom)
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.Texte)
            <span class="etoile">*</span>
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Texte)
            @Html.ValidationMessageFor(m => m.Texte)
        </div>

        <p>
            @Html.ValidationSummary(true, "Echec de la création du conseil.")
        </p>

        <p>
            Champs obligatoires <span class="etoile">*</span><br/>
            <input type="submit" value="Créer" />
        </p>
    </div>
}
